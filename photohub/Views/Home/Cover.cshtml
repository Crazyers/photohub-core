@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="keywords" content="Welcome to PhotoHub,all photos,post photo,photohub,photo,filter,@ViewBag.Keywords">
    <meta name="description" content="PhotoHub provides a fast, beautiful and fun way for you to share media through our content-sharing platform. Just snap a photo, choose a filter to transform the look and feel, add comments (if you like) and share!">

    <title>Welcome to PhotoHub</title>

    <meta name="theme-color" content="#9E9E9E">

    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/favicon-24x24.png" sizes="24x24">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-64x64.png" sizes="64x64">
    <link rel="icon" type="image/png" href="/favicon-128x128.png" sizes="128x128">
    <link rel="icon" type="image/png" href="/favicon-256x256.png" sizes="256x256">
    <link rel="icon" type="image/png" href="/favicon-512x512.png" sizes="512x512">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="~/css/cover.min.css">

</head>

<body>
    <img src="~/images/cover-background-1.jpg" style="display: none;" />
    <img src="~/images/cover-background-2.jpg" style="display: none;" />
    <img src="~/images/cover-background-3.jpg" style="display: none;" />
    <img src="~/images/cover-background-4.jpg" style="display: none;" />
    <img src="~/images/cover-background-5.jpg" style="display: none;" />
    <img src="~/images/cover-background-6.jpg" style="display: none;" />
    <img src="~/images/cover-background-7.jpg" style="display: none;" />
    <img src="~/images/cover-background-8.jpg" style="display: none;" />

    <section class="hero is-fullheight is-default is-bold">
        <div class="hero-head">
            <nav>
                <a href="/photos" title="All photos">
                    <b class="navbar-item has-text-white">
                        PhotoHub
                    </b>
                </a>
                <div>
                    <a class="navbar-item" href="/account/login" title="Login">
                        Log in
                    </a>
                </div>
            </nav>
        </div>
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="columns is-vcentered">
                    <div class="column">
                        <h1 class="title is-2 is-spaced has-text-white">
                            Enter the awesome world of photography!
                        </h1>
                        <p class="has-text-centered">
                            <a class="button is-white is-medium" href="/account/register" title="Sign up">
                                Sign Up
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="hero-foot">
            <div class="container">
                <div class="tabs is-centered has-text-centered has-text-white">
                    <ul>
                        <li>
                            Copyright © @DateTime.Now.Year PhotoHub. All rights reserved.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</body>
</html>