@{
    ViewBag.Title = "Search";
    ViewBag.Keywords = "Search,users,find,friends";
    ViewBag.Description = "Search page on PhotoHub";
}

@section Scripts {
    <script defer src="~/js/home/search.js"></script>
}

<div id="search" class="container is-flex is-flex-centered is-flex-column" v-cloak>
    <div class="buttons" id="search-buttons-panel">
        <a class="button is-rounded" v-on:click="showUsers" v-bind:class="{'is-light': usersTab.active}">
            <span>Users</span>
        </a>
        <a class="button is-rounded" v-on:click="showPhotos" v-bind:class="{'is-light': photosTab.active}">
            <span>Photos</span>
        </a>
        <a class="button is-rounded" v-on:click="showTags" v-bind:class="{'is-light': tagsTab.active}">
            <span>Tags</span>
        </a>
    </div>

    <div class="field is-grouped search-field" v-if="usersTab.active">
        <p class="control is-expanded">
            <input class="input" type="text" v-on:keyup.enter="handleSearch" v-model="usersTab.search" placeholder="Enter login or name" required>
        </p>
        <p class="control">
            <button class="button is-warning" title="Search" v-bind:class="{'is-loading': usersTab.incallback }" v-on:submit.prevent="handleSearch" v-on:submit="handleSearch" v-on:click="handleSearch">
                Search
            </button>
        </p>
    </div>
    
    <div class="field is-grouped search-field" v-if="photosTab.active">
        <p class="control is-expanded">
            <input class="input" type="text" v-on:keyup.enter="handleSearch" v-model="photosTab.search" placeholder="Enter brand or model" required>
        </p>
        <p class="control">
            <button class="button is-warning" title="Search" v-bind:class="{'is-loading': photosTab.incallback}" v-on:submit.prevent="handleSearch" v-on:submit="handleSearch" v-on:click="handleSearch">
                Search
            </button>
        </p>
    </div>
    
    <div class="field is-grouped search-field" v-if="tagsTab.active">
        <p class="control is-expanded">
            <input class="input" type="text" v-model="tagsTab.search" placeholder="Enter tag name" required>
        </p>
    </div>
    
    <div id="tags-search-panel" class="buttons" v-bind:class="{'is-display-none': !tagsTab.active}" v-if="tagsTab.active">
        <a class="button is-light" v-bind:href="'/tag/'+tag.name" v-bind:title="tag.name" v-for="tag in filteredTags" :key="tag.$id">{{tag.name}}</a>
    </div>

    <div id="photos-search-panel" v-bind:class="{'is-display-none': !photosTab.active}">
        <div class="select">
            <select id="Iso" name="Iso" v-model="iso">
                <option value="0" disabled>ISO</option>
                <option value="0">Any</option>
                @foreach(IsoViewModel iso in ViewBag.Isos)
                {
                    <option value="@iso.Id">@iso.Name</option>
                }
            </select>
        </div>
        <div class="select">
            <select id="Exposure" name="Exposure" v-model="exposure">
                <option value="0" disabled>Exposure</option>
                <option value="0">Any</option>
                @foreach(ExposureViewModel exposure in ViewBag.Exposures)
                {
                    <option value="@exposure.Id">@exposure.Name</option>
                }
            </select>
        </div>
        <div class="select">
            <select id="Aperture" name="Aperture" v-model="aperture">
                <option value="0" disabled>Aperture</option>
                <option value="0">Any</option>
                @foreach(ApertureViewModel aperture in ViewBag.Apertures)
                {
                    <option value="@aperture.Id">@aperture.Name</option>
                }
            </select>
        </div>
    </div>

    <article class="is-flex is-flex-centered is-flex-wrap search-element" v-for="user in usersTab.users" v-if="usersTab.active && usersTab.users != null">
        <a v-bind:href="`/users/${user.userName}`" class="button is-white is-flex is-flex-centered" v-bind:title="user.userName" style="justify-content: space-between !important; height: 100%;">
            <img class="image is-64x64 is-circle" v-bind:src="user.avatar" v-bind:alt="user.userName" style="margin-right: 7px;" />
            <span class="is-doted-end is-size-5">{{user.userName}}</span>
        </a>
        <button class="button" v-bind:title="user.followed?'Unfollow':'Follow'" v-bind:class="{'is-warning': !user.followed}" v-on:click="user.followed?disfollow(user):follow(user)"><i class="fas fa-user-plus" v-bind:class="user.followed?'fa-user-times':'fa-user-plus'"></i></button>
    </article>
        
    <article class="card is-responsive" v-for="post in photosTab.photos" v-if="photosTab.active && photosTab.photos != null">
        <header class="card-header">
            <p class="card-header-title">
                <a class="has-text-grey-darker has-text-left has-text-justified" v-bind:href="`/users/${post.owner.userName}`" v-bind:title="post.owner.userName" style="margin-right: 3px;"><img class="image is-32x32 is-circle" v-bind:src="post.owner.avatar" v-bind:alt="post.owner.userName" /></a>
                <a class="has-text-grey-darker has-text-left has-text-justified" v-bind:href="`/users/${post.owner.userName}`" v-bind:title="post.owner.userName">{{post.owner.userName}}</a>
            </p>

            <div class="card-header-icon">
                <a class="button is-white" title="show options" v-on:click="showOptions(post)"><i class="fas fa-bars"></i></a>
            </div>
        </header>

        <div class="card-image is-unselectable" v-on:dblclick="like(post)">
            <figure class="is-card-image filter" v-bind:class="post.filter">
                <img v-bind:src="`/data/photos/${post.owner.userName}/${post.path}`" v-bind:alt="`${post.owner.userName} photo with filter`">
            </figure>
        </div>

        <div class="card-tags-panel">
            <a class="button is-small is-light" v-bind:href="`/tag/${tag.name}`" v-for="tag in post.tags">{{tag.name}}</a>
        </div>

        <div class="card-content">
            <div class="media">
                <div class="media-left is-doted-end">
                    {{post.description}}
                </div>

                <div class="media-content">

                </div>

                <div class="media-right">
                    <time v-bind:datetime="post.date">{{post.date}}</time>
                </div>
            </div>


            <div class="content card-button-panel">
                <div>
                    <button class="button is-danger is-unselectable" v-bind:class="post.liked?'':'is-outlined'" v-on:click="post.liked?dislike(post):like(post)" v-bind:title="post.liked?'Dislike':'Like'" v-if="currentAppUserName"><i class="fa-heart" v-bind:class="post.liked?'fas':'far'"></i></button>
                    <button v-if="post.likes.length > 0" class="button is-danger is-unselectable" v-bind:class="post.liked?'':'is-outlined'" v-on:click="showLikes(post)" title="Likes list">{{ post.likes.length }}</button>
                    <button class="button is-light comment-button" v-on:click="showComments(post)" title="Comments"><i class="fas fa-comment"></i></button>
                    <button class="button is-light" v-on:click="showComments(post)" title="Comments" v-if="post.comments.length > 0">{{ post.comments.length }}</button>
                </div>
                <div>
                    <button class="button is-white" title="Show metadata" v-on:click="showMetadata(post)"><i class="fab fa-medapps"></i></button>
                    <button class="button bookmark-button" v-bind:class="post.bookmarked?'is-light':'is-white'" title="Save to bookmarks" v-if="currentAppUserName" v-on:click="post.bookmarked?disbookmark(post):bookmark(post)"><i class="fa-bookmark" v-bind:class="post.bookmarked?'fas':'far'"></i></button>
                </div>
            </div>
        </div>
    </article>

    <!-- Modal Likes -->
    <div class="modal" v-bind:class="{'is-active': modals.likeActive}" v-if="photosTab.active && photosTab.photos != null && current">
        <div class="modal-background modal-custom-background" v-on:click="closeLikes"></div>
        <div class="modal-card modal-card-custom">
            <header class="modal-card-head">
                <p class="modal-card-title is-uppercase">likes</p>
                <a class="close-button" v-on:click="closeLikes" title="Close modal"><i class="fas fa-times"></i></a>
            </header>
            <section class="modal-card-body" v-if="current.likes != null && current.likes.length > 0">
                <div class="media" v-for="like in current.likes">
                    <div class="media-left">
                        <a v-bind:href="`/users/${like.owner.userName}`" class="has-text-black is-doted-end" v-bind:title="like.owner.userName"><b>{{ like.owner.userName }}</b></a>
                    </div>

                    <div class="media-content">

                    </div>

                    <div class="media-right">
                        <small class="has-text-grey">{{ like.date }}</small>
                    </div>
                </div>
            </section>
            <section class="modal-card-body" style="overflow-x: hidden; overflow-y: auto;" v-if="current.likes == null || current.likes.length <= 0">
                <div class="empty-container-modal">
                    <p>Like it first</p>
                </div>
            </section>
            <a class="button is-white close-modal-mobile-button" title="Close modal" v-on:click="closeLikes">Close</a>
        </div>
    </div>

    <!-- Modal Comments -->
    <div class="modal" v-bind:class="{'is-active': modals.commentActive}" v-if="photosTab.active && photosTab.photos != null && current">
        <div class="modal-background modal-custom-background" v-on:click="closeComments"></div>
        <div class="modal-card modal-card-custom">
            <header class="modal-card-head">
                <p class="modal-card-title is-uppercase">comments</p>
                <a class="close-button" v-on:click="closeComments" title="Close modal"><i class="fas fa-times"></i></a>
            </header>
            <section class="modal-card-body" v-if="current.comments != null && current.comments.length > 0">
                <div class="content">
                    <div class="media" v-for="comment in current.comments">
                        <div class="media-left is-flex is-flex-column">
                            <a v-bind:href="`/users/${comment.owner.userName}`" class="has-text-black" v-bind:title="comment.owner.userName"><b>{{ comment.owner.userName }}</b></a>
                            <small class="has-text-grey">{{ comment.date }}</small>
                        </div>

                        <div class="media-content is-doted-end" v-bind:title="comment.text">
                            {{comment.text}}
                        </div>

                        <div class="media-right" v-if="comment.$id && currentAppUserName == comment.owner.userName">
                            <a class="close-button" v-on:click="deleteComment(comment)" title="Delete comment"><i class="fas fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </section>
            <section class="modal-card-body" style="overflow-x: hidden; overflow-y: auto;" v-if="current.comments == null || current.comments.length <= 0">
                <div class="empty-container-modal">
                    <p>Comment it first</p>
                </div>
            </section>
            <footer class="modal-card-foot is-flex is-flex-centered is-flex-wrap" v-if="currentAppUserName">
                <div class="control" v-if="currentAppUserName" style="width: 100%;">
                    <input class="input" id="comment" type="text" placeholder="Comment photo" v-on:keyup.enter="comment">
                </div>
                <button class="button is-warning" v-bind:class="{'is-loading': commenting}" title="Comment photo" style="margin-top: 5px;" v-if="currentAppUserName" v-on:click="comment">Comment</button>
            </footer>
            <a class="button is-white close-modal-mobile-button" title="Close modal" v-on:click="closeComments">Close</a>
        </div>
    </div>

    <!-- Modal Options -->
    <div class="modal" v-bind:class="{'is-active': modals.optionActive}" v-if="photosTab.active && photosTab.photos != null && current">
        <div class="modal-background modal-options-background" v-on:click="closeOptions"></div>
        <div class="content is-flex is-flex-column modal-options-content-custom">
            <a class="button is-large is-white has-text-grey-darker" title="Copy link to Clipboard" v-on:click="copyToClipboard(current.$id)">Copy link to Clipboard</a>
            <a class="button is-large is-white has-text-grey-darker" title="Go to photo" v-bind:href="`/photos/${current.$id}`">Go to photo</a>
            <a class="button is-large is-white has-text-grey-darker" title="Close" v-on:click="closeOptions">Close</a>
        </div>
    </div>

    <!-- Modal Metadata -->
    <div class="modal" v-bind:class="{'is-active': modals.metadataActive}" v-if="photosTab.active && photosTab.photos != null && current">
        <div class="modal-background modal-custom-background" v-on:click="closeMetadata"></div>
        <div class="modal-card modal-card-custom modal-card-custom-metadata">
            <header class="modal-card-head">
                <p class="modal-card-title is-uppercase">info</p>
                <a class="close-button" v-on:click="closeMetadata" title="Close modal"><i class="fas fa-times"></i></a>
            </header>
            <section class="modal-card-body modal-card-body-metadata">
                <div v-if="current.manufacturer != 'Unknown' || current.model != 'Unknown'">
                    <p>Brand</p>
                    <p>{{current.manufacturer}}</p>
                </div>
                <div v-if="current.manufacturer != 'Unknown' || current.model != 'Unknown'">
                    <p>Model</p>
                    <p>{{current.model}}</p>
                </div>
                <div v-if="current.iso != 'Unknown' || current.exposure != 'Unknown' || current.aperture != 'Unknown'">
                    <p>ISO</p>
                    <p>{{current.iso}}</p>
                </div>
                <div v-if="current.iso != 'Unknown' || current.exposure != 'Unknown' || current.aperture != 'Unknown'">
                    <p>Exposure</p>
                    <p>{{current.exposure}}</p>
                </div>
                <div v-if="current.iso != 'Unknown' || current.exposure != 'Unknown' || current.aperture != 'Unknown'">
                    <p>Aperture</p>
                    <p>{{current.aperture}}</p>
                </div>
                <div v-if="current.focalLength >= 3">
                    <p>Focal length</p>
                    <p>{{current.focalLength}}</p>
                </div>
                <div>
                    <p>Filter</p>
                    <p>{{current.filter}}</p>
                </div>
                <a class="button is-white has-text-grey-darker" title="Close modal" v-on:click="closeMetadata">Close</a>
            </section>
        </div>
    </div>

    <!-- Empty users -->
    <div class="empty-container" v-if="!usersTab.incallback && usersTab.active && (usersTab.users == null || usersTab.users.length <= 0)">
        <p>Can't find user</p>
    </div>
        
    <!-- Empty photos -->
    <div class="empty-container" v-if="!photosTab.incallback && photosTab.active && (photosTab.photos == null || photosTab.photos.length <= 0)">
        <p>Can't find photo</p>
    </div>
        
    <!-- Empty tags -->
    <div class="empty-container" v-if="tagsTab.active && (tagsTab.tags == null || tagsTab.tags.length <= 0 || filteredTags.length <= 0)">
        <p>Can't find tag</p>
    </div>

    <!--  Loading  -->
    <div class="empty-container" v-if="usersTab.active && usersTab.incallback">
        <p>Loading...</p>
    </div>

    <!--  Loading  -->
    <div class="empty-container" v-if="photosTab.active && photosTab.incallback">
        <p>Loading...</p>
    </div>

    <!--  Loading  -->
    <div class="empty-container" v-if="tagsTab.active && tagsTab.incallback">
        <p>Loading...</p>
    </div>

    <button class="button is-uppercase is-responsive" v-bind:class="{'is-loading': usersTab.incallback}" v-on:click="search" v-if="usersTab.active && !usersTab.loaded && usersTab.users != null && usersTab.users.length > 0 && usersTab.users.length%12 == 0" v-cloak>Load More</button>
    <button class="button is-uppercase is-responsive" v-bind:class="{'is-loading': photosTab.incallback}" v-on:click="search" v-if="photosTab.active && !photosTab.loaded && photosTab.photos != null  && photosTab.photos.length > 0 && photosTab.photos.length%8 == 0" v-cloak>Load More</button>
</div>