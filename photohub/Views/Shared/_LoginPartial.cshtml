@using Microsoft.AspNetCore.Identity
@using PhotoHub.WEB.ViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="navbar-item" title="Updates" href="/">
        Updates
    </a>
    <div class="navbar-item has-dropdown is-hoverable">
        <span class="navbar-link">
            Create
        </span>
        <div class="navbar-dropdown is-boxed">
            <a class="navbar-item" href="/Photos/Create" title="Create photo">
                Photo
            </a>
            <a class="navbar-item" href="/Giveaways/Create" title="Create giveaway">
                Giveaway
            </a>
        </div>
    </div>
    <a class="navbar-item" title="Search" href="/Search">
        Search
    </a>
    <a class="navbar-item" title="@UserManager.GetUserName(User)" href="/Users/@UserManager.GetUserName(User)">
        Profile
    </a>
}
else
{
    <a id="registerLink" class="navbar-item is-active" href="/Account/Register" title="Sign up">
        Sign up
    </a>
    <a id="registerLink" class="navbar-item" href="/Account/Login" title="Log in">
        Log in
    </a>
}
