@model PhotoHub.WEB.ViewModels.PhotoViewModel

@{
    ViewBag.Title = "Photo";
    ViewBag.Keywords = "Photo #" + Model.Id + ",Like,User,Post,Photo,Filter,Comment,Comments,Edit photo";
    ViewBag.Description = Model.Description;
}

@section Scripts {
    <script defer src="~/js/photos/details.js"></script>
}

    <div class="content" id="photosDetails" data-post-id="@Model.Id">
        <div class="is-flex is-flex-centered">
            <article class="card is-responsive">
                <header class="card-header">
                    <p class="card-header-title">
                        <a class="has-text-grey-darker has-text-left has-text-justified" href="/users/@Model.Owner.UserName" title="@Model.Owner.UserName" style="margin-right: 3px;"><img class="image is-32x32 is-circle" src="@Model.Owner.Avatar" alt="@Model.Owner.UserName" /></a>
                        <a class="has-text-grey-darker has-text-left has-text-justified" href="/users/@Model.Owner.UserName" title="@Model.Owner.UserName">@Model.Owner.UserName</a>
                    </p>
                    @if (Model.Owner.UserName == User.Identity.Name)
                    {
                        <div class="card-header-icon">
                            <a class="button is-white" title="show options" v-on:click="modalOptions"><i class="fas fa-bars"></i></a>
                        </div>
                    }
                </header>

                <div class="card-image is-unselectable" v-on:dblclick="like">
                    <figure class="is-card-image filter" v-bind:class="post.filter" style="margin: 0;">
                        <img src="/data/photos/@Model.Owner.UserName/@Model.Path" v-bind:alt="post.filter">
                    </figure>
                </div>

                <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                            @Model.Description
                        </div>

                        <div class="media-content">

                        </div>

                        <div class="media-right">
                            <time v-bind:datetime="post.date">{{post.date}}</time>
                        </div>
                    </div>

                    <div class="content card-button-panel">
                        <div>
                            @if (User.Identity.IsAuthenticated)
                        {
                            <button class="button is-danger is-unselectable" v-bind:class="post.liked?'':'is-outlined'" v-on:click="post.liked?dislike():like()" v-bind:title="post.liked?'Dislike':'Like'" v-if="currentAppUserName"><i class="fa-heart" v-bind:class="post.liked?'fas':'far'"></i></button>
                    }
                            <button v-if="post.likes.length > 0" class="button is-danger is-unselectable" v-bind:class="post.liked?'':'is-outlined'" v-on:click="modalLikes()" title="Likes list">{{ post.likes.length }}</button>
                        </div>
                        <div>
                            <button class="button is-white" title="Show metadata" v-on:click="showMetadata(post)"><i class="fab fa-medapps"></i></button>
                            @if (User.Identity.IsAuthenticated)
                        {
                            <button class="button bookmark-button" v-bind:class="post.bookmarked?'is-light':'is-white'" title="Save to bookmarks" v-on:click="post.bookmarked?disbookmark(post):bookmark(post)"><i class="fa-bookmark" v-bind:class="post.bookmarked?'fas':'far'"></i></button>
                    }
                        </div>
                    </div>
                </div>

                <footer class="card-footer">
                    <div class="content" style="width: 100%;">
                        <div class="content" id="content-photo-details" v-if="post.comments.length">
                            <div class="media" v-for="comment in post.comments">
                                <div class="media-left is-flex is-flex-column">
                                    <a v-bind:href="`/users/${comment.owner.userName}`" class="has-text-black" v-bind:title="comment.owner.userName"><b>{{ comment.owner.userName }}</b></a>
                                    <small class="has-text-grey">{{ comment.date }}</small>
                                </div>

                                <div class="media-content is-doted-end" v-bind:title="comment.text">
                                    {{comment.text}}
                                </div>

                                <div class="media-right" v-if="comment.$id && currentAppUserName == comment.owner.userName">
                                    <a class="close-button" v-on:click="deleteComment(comment)" title="Delete comment"><i class="fas fa-trash"></i></a>
                                </div>
                            </div>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                    {
                        <div class="control" style="margin: 15px 15px 0 15px">
                            <input class="input" id="comment" type="text" placeholder="Comment photo" v-on:keyup.enter="comment">
                            <div class="is-flex is-flex-centered" style="margin: 10px 0 10px 0">
                                <button class="button is-warning" v-bind:class="{'is-loading': commenting}" v-on:click="comment" title="Comment photo">Comment</button>
                            </div>
                        </div>
                }
                    </div>
                </footer>
            </article>
        </div>

        <!-- Modal Likes -->
        <div class="modal" v-bind:class="{'is-active': modals.likeActive}">
            <div class="modal-background modal-custom-background" v-on:click="modalLikes"></div>
            <div class="modal-card modal-card-custom">
                <header class="modal-card-head">
                    <p class="modal-card-title is-uppercase">Likes</p>
                    <a class="close-button" v-on:click="modalLikes" title="Close modal"><i class="fas fa-times"></i></a>
                </header>
                <section class="modal-card-body" v-if="post.likes != null && post.likes.length > 0">
                    <div class="media" v-for="like in post.likes">
                        <div class="media-left">
                            <a v-bind:href="`/users/${like.owner.userName}`" class="has-text-black is-doted-end" v-bind:title="like.owner.userName"><b>{{ like.owner.userName }}</b></a>
                        </div>

                        <div class="media-content">

                        </div>

                        <div class="media-right">
                            <small class="has-text-grey">{{ like.date }}</small>
                        </div>
                    </div>
                </section>
                <section class="modal-card-body" style="overflow-x: hidden; overflow-y: auto;" v-if="post.likes == null || post.likes.length <= 0">
                    <div class="empty-container-modal">
                        <p>Like it first</p>
                    </div>
                </section>
                <a class="button is-white close-modal-mobile-button" title="Close modal" v-on:click="modalLikes">Close</a>
            </div>
        </div>

        <!-- Modal Options -->
        <div class="modal" v-bind:class="{'is-active': modals.optionActive}">
            <div class="modal-background modal-options-background" v-on:click="modalOptions"></div>
            <div class="content is-flex is-flex-column modal-options-content-custom">
                <form action="/photos/delete/@Model.Id" method="post">
                    <button type="submit" class="button is-large is-danger" title="Delete">Delete</button>
                </form>
                <a class="button is-large is-white has-text-grey-darker" href="/photos/edit/@Model.Id" title="Edit photo">Edit</a>
                <a class="button is-large is-white has-text-grey-darker" title="Close" v-on:click="modalOptions">Close</a>
            </div>
        </div>

        <!-- Modal Metadata -->
        <div class="modal" v-bind:class="{'is-active': modals.metadataActive}">
            <div class="modal-background modal-custom-background" v-on:click="closeMetadata"></div>
            <div class="modal-card modal-card-custom modal-card-custom-metadata">
                <header class="modal-card-head">
                    <p class="modal-card-title is-uppercase">info</p>
                    <a class="close-button" v-on:click="closeMetadata" title="Close modal"><i class="fas fa-times"></i></a>
                </header>
                <section class="modal-card-body modal-card-body-metadata">
                    <div v-if="post.manufacturer != 'Unknown' || post.model != 'Unknown'">
                        <p>Brand</p>
                        <p>{{post.manufacturer}}</p>
                    </div>
                    <div v-if="post.manufacturer != 'Unknown' || post.model != 'Unknown'">
                        <p>Model</p>
                        <p>{{post.model}}</p>
                    </div>
                    <div v-if="post.iso != 'Unknown' || post.exposure != 'Unknown' || post.aperture != 'Unknown'">
                        <p>ISO</p>
                        <p>{{post.iso}}</p>
                    </div>
                    <div v-if="post.iso != 'Unknown' || post.exposure != 'Unknown' || post.aperture != 'Unknown'">
                        <p>Exposure</p>
                        <p>{{post.exposure}}</p>
                    </div>
                    <div v-if="post.iso != 'Unknown' || post.exposure != 'Unknown' || post.aperture != 'Unknown'">
                        <p>Aperture</p>
                        <p>{{post.aperture}}</p>
                    </div>
                    <div v-if="post.focalLength >= 3">
                        <p>Focal length</p>
                        <p>{{post.focalLength}}</p>
                    </div>
                    <div>
                        <p>Filter</p>
                        <p>{{post.filter}}</p>
                    </div>
                    <a class="button is-white has-text-grey-darker" title="Close modal" v-on:click="closeMetadata">Close</a>
                </section>
            </div>
        </div>
    </div>